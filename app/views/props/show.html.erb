<div class="heading-container">
  <div class="d-flex justify-content-center mt-5">
    <h1 class="headers text-center"><%= @prop.name %></h1>
  </div>
</div>


<div class="big-container">
  <div class="d-flex flex-column justify-content-around h-100 align-items-center">

    <div class="top-show-container">
      <div class="left-show-container">
        <% if @prop.photo.attached? %>
          <%= cl_image_tag @prop.photo.key, height: 500, width: 700, crop: :fill, class: "show-card" %>
        <% else %>
          <i class="fa-solid fa-broom fa-5x fa-border"></i>
        <% end %>
      </div>
      <div class="righ-show-container">
        <div class="card-body">
          <h1> About </h1>
          <br>
          <h5 class="headers card-title">Price</h5>
          <p class="card-text"> <%= @prop.price %> </p>
          <h5 class="headers card-title">Category</h5>
          <p class="card-text"> <%= @prop.category %> </p>
          <h5 class="headers card-text"> Description</h5>
          <p class="card-text"> <%= @prop.description %></p>
          <button href="#" class="btn btn-success"> <%= link_to "Book now!", root_path %> </button>
        </div>
      </div>
    </div>

    <div class="bottom-show-container gap-5">
      <button href="#" class="btn btn-outline-primary"> <%= link_to "Edit this prop", edit_prop_path(@prop) %> </button>
      <br>
      <button href="#" class="btn btn-outline-primary"> <%= link_to "Back to all props", props_path %> </button>
      <br>
      <%= button_to "Delete this prop", @prop, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>

<div>
  <div class="d-flex justify-content-center">
    <h1 class="headers"><%= @prop.name %></h1>
  </div>
  <div class="d-flex justify-content-center">
    <% if @prop.photo.attached? %>
      <%= cl_image_tag @prop.photo.key, height: 300, width: 400, crop: :fill, class: "show-card" %>
    <% else %>
      <i class="fa-solid fa-broom fa-5x fa-border"></i>
    <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <div class="card text-center m-5" style="width: 18rem;">
      <div class="card-body">
        <h5 class="headers card-title">Category</h5>
        <p class="card-text"> <%= @prop.category %> </p>
        <h5 class="headers card-text"> Description</h5>
        <p class="card-text"> <%= @prop.description %></p>
      </div>
    </div>
  </div>
  <div class="card m-4 p-2 col-5 mx-auto">
    <%= simple_form_for [@prop, @booking] do |f| %>
    <%= f.input :start_date, html5: true, class: "date-form" %>
    <%= f.input :end_date, html5: true %>
    <%= f.submit "Book now!" %>
    <% end %>
  </div>
</div>

<div class="d-flex text-center items-center justify-content-center">
  <h1 class="my-4">YOUR LISTED PROPS </h1>
</div>

<div class="container text-center props-container">
  <% @props.each do |prop| %>

    <div class="card-body headers rounded m-4 gradient">
      <%# <div index="description"> %>
        <h4><%= prop.name %></h4>
        <p>
        <%# if there's an image, add the link to the image  %>
        <% if prop.photo.attached? %>
          <%= link_to prop_path(prop) do %>
          <%=cl_image_tag prop.photo.key, height: 180, width: 300, crop: :fill, class: "img-border" %>
          <% end %>
        <%# if not, add the link to the prop %>
        <% else %>
          <%= link_to prop_path(prop) do %>
          <i class="fa-solid fa-broom fa-5x fa-border"></i>
          <% end %>
        <% end %>
        <p> <%= prop.description %></p>
      <%# </div> %>

        <div>
          <p class="body">Price <%= prop.price %>â‚¬</p>
          <p class="body">Category <%= prop.category.capitalize %></p>
        </div>
    </div>
  <% end %>
</div>

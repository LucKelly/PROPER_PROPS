<h1 class="headers">LIST OF PROPS </h1>
<div class="container text-center props-container">

  <% @props.each do |prop| %>
    <div class="card-body headers rounded m-4">
      <div index="description">
        <p>
        <%# if there's an image, add the link to the image  %>
        <% if prop.photo.attached? %>
          <%= link_to prop_path(prop) do %>
          <%=cl_image_tag prop.photo.key, height: 75, width: 100, crop: :fill, class: "rounded-circle" %>
          <% end %>
        <%# if not, add the link to the prop %>
        <% else %>
          <%= link_to prop_path(prop) do %>
          <i class="fa-solid fa-broom fa-5x fa-border"></i>
          <% end %>
        <% end %>
        <p> <%= prop.description %></p>
      </div>

      <div>
        <p class="body"><%= prop.name %></p>
        <p class="body"><%= prop.price %></p>
        <p class="body"><%= prop.category %></p>
      </div>
    </div>
  <% end %>
</div>

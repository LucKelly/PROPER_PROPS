<h2 class="title p-3 m-2">My Bookings</h2>
<ul>
  <% if @bookings.empty? %>
    <p>You have no bookings</p>
  <% else %>
    <% @bookings.each do |booking| %>
      <div class="booking-card gradient col-4 mx-auto m-3 p-1">
        <p class="p-1"><%= link_to booking.prop.name, booking.prop %></p>
        <p class="p-1">Booked to user: <%= booking.user.username %></p>
        <p class="p-1">From: <%= booking.start_date.strftime("%d/%m/%Y") %> - To: <%= booking.end_date.strftime("%d/%m/%Y") %></p>
        <p class="p-1">Total price: <%= booking.prop.price * (booking.end_date - booking.start_date).to_i %>â‚¬</p>
      </div>
    <% end %>
  <% end %>
</ul>
